
@model List<AllCategoryViewModel>

@{
    this.ViewData["Title"] = "AllCategory";
}



<div class="row">
    <div class="offset-lg-1 col-lg-10 offset-xl-2 col-xl-8 offset-md-1 col-md-10 offset-2 col-sm-6">

        <div class="container-fluid text-center">
            <h1 class="display-4">@this.ViewData["Title"]</h1>
        </div>


        <div class="row">

            @foreach (var category in Model)
            {
                <br />
                <div class="col-md-4">
                    <div class="card mb-3">
                        <img src="@category.ImageUrl" class="card-img-top img-fluid card-image rounded" data-toggle="tooltip">
                        <div class="card-body text-center">
                            <a asp-controller="Parts" asp-action="AllParts" asp-route-categoryId="@category.Id" class="btn btn-primary ">@category.Name</a>
                        </div>
                    </div>
                </div>
                <br />
            }
        </div>
    </div>
</div>



