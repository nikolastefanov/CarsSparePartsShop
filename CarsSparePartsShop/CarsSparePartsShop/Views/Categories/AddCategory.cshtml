@model AddCategoryViewModel

@{
    this.ViewData["Title"] = "AddCategory";
}

<div class="row">
<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
    <h2 class="heading-margin text-center">Add Car</h2>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="640D, S-Class, etc...">
        <span asp-validation-for="Name" class="small text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" placeholder="Your fine URL here...">
        <span asp-validation-for="ImageUrl" class="small text-danger"></span>
    </div>


    <a asp-controller="Categories" asp-action="AllCategory">All Categories</a>
    </div>
</div>
